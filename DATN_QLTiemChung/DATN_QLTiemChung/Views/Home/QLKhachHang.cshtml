									<option value="">Chọn dân tộc</option>
									@foreach (var danToc in _danTocList)
									{
										if (khachHang!=null && khachHang.DanToc == danToc)
										{
											<option value="@danToc" selected> @danToc</option>
										}
										else
										{
											<option value="@danToc"> @danToc</option>
										}
									}
								</select>
