        function renderTable(data) {
            const tbody = document.querySelector("#nhanVienTable tbody");
            tbody.innerHTML = ''; // Xóa dữ liệu cũ

            if (data.length === 0) {
                // Hiển thị thông báo khi không có dữ liệu
                tbody.innerHTML = `
                    <tr>
