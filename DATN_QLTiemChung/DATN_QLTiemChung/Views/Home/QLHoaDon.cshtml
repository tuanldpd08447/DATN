@{
    var vatTu = ViewBag.vatTuYTe as List<VatTuYTe>;
    var hoaDon = ViewBag.HoaDons as HoaDonDTO;
    var khachhang = ViewBag.Khachhang as KhachHangDTo;
    KhachHangDTo khachHangDTo = new KhachHangDTo();
    if(hoaDon != null)
    {
        khachHangDTo.IDKH = hoaDon.IDKH;
        khachHangDTo.TenKhachHang = hoaDon.KhachHang.TenKhachHang;
        khachHangDTo.SoDienThoai = hoaDon.KhachHang.SoDienThoai;
        khachHangDTo.NgaySinh = hoaDon.KhachHang.NgaySinh;
        khachHangDTo.DiaChi = hoaDon.KhachHang.DiaChi;

    }
    else if (khachhang != null)
    {
        khachHangDTo.IDKH = khachhang.IDKH;
        khachHangDTo.TenKhachHang = khachhang.TenKhachHang;
        khachHangDTo.SoDienThoai = khachhang.SoDienThoai;
        khachHangDTo.NgaySinh = khachhang.NgaySinh;
        khachHangDTo.FullAddress = khachhang.FullAddress;
    }


}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="" style="color: #2fb388;">QUẢN LÝ HÓA ĐƠN</h2>
        <div class="float-end ">
            <button class="btn fw-bold custom-btn" id="activateButton"><i class="fa-solid fa-plus"></i> Thêm</button>
            <button class="btn fw-bold custom-btn" >
                <i class="fa-solid fa-floppy-disk"></i> Lưu
            </button>
            <button class="btn fw-bold custom-btn"><i class="fa-solid fa-repeat"></i> Hủy </button>
            <button class="btn fw-bold custom-btn"><i class="fa-solid fa-print"></i> In</button>
            <button class="btn fw-bold custom-btn"><i class="fa-solid fa-right-from-bracket"></i> </button>
        </div>
    </div>

    <!-- Thông tin hóa đơn -->
    <div class="row m-0 mb-3 border rounded-4 py-2  ">
        <div class="col-4  ">
            <div class=" ms-1 p-3 py-1 border rounded-4 h-100">
              
                <div class="row">
                    <button class="col border  border-1 rounded-start btn "><i class="fa-solid fa-arrows-rotate"></i></button>
                    <input class="col-8  border border-1 rounded-2 mx-1" type="text">
                    <button type="button" class="col border border-1 rounded-end btn "><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
                <div class="row border rounded-4 border-1 mt-1 " style="min-height: 90%;">

                    <table class="table  table-hover h-25 m-0 text-center ">
                        <thead class="rounded-4">
                            <tr>
                                <th class="col-2">STT</th>
                                <th class="col">Mã khách hàng</th>
                                <th class="col-4">Họ tên</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int STT = 1;
                            }
                            @if (ViewBag.KhachHangs != null)
                            {
                                @foreach (var item in ViewBag.KhachHangs)
                                    {
                                        <tr onclick="location.href='@Url.Action("ClickKhachHang", "QLHoaDon", new { IDKH = @item.IDKH })' ">

                                            <td>@STT</td>
                                            <td>@item.IDKH</td>
                                            <td>@item.TenKhachHang</td>

                                        </tr>
                                        STT++;
                                    }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="invoice-section col-8  ">
            <form asp-action="AddHoaDon" asp-controller="QLHoaDon" method="post">
                <div class=" ms-2 p-3 border rounded-4 h-100">
                    <div class="row ">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="fw-semibold" for="medicalCode">Mã Khách Hàng</label>
                                <input type="text" name="MaKH" class="form-control form-control-sm" id="medicalCode " value="@if(khachHangDTo!=null){
                                @khachHangDTo.IDKH
} ">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="fw-semibold" for="name">Họ tên</label>
                                <input type="text"  class="form-control form-control-sm" id="name" value="@if(khachHangDTo!=null){
                                @khachHangDTo.TenKhachHang
}">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="fw-semibold" for="phone">Số điện thoại</label>
                                <input type="text" class="form-control form-control-sm" id="phone" value="@if(khachHangDTo!=null){
                                @khachHangDTo.SoDienThoai
}">
                            </div>
                        </div>
                        <div class="col-md-1">
                            <div class="form-group">
                                <label class="fw-semibold" for="age">Tuổi</label>
                                @if(hoaDon!=null)
                                {
                                    var tuoi = 0;
                                    if (hoaDon.KhachHang?.NgaySinh != null)
                                    {
                                        tuoi = DateTime.Now.Year - hoaDon.KhachHang.NgaySinh.Year;
                                    }
                                }
                                <input type="text" class="form-control form-control-sm" id="age" value="">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="fw-semibold" for="birthYear">Năm sinh</label>
                                <input type="number" class="form-control form-control-sm"
                                       value="@if (hoaDon != null){ @hoaDon.KhachHang.NgaySinh.Year}"
                                       min="1900" max="2100" />
                            </div>
                        </div>


                    </div>
                    <div class="row">
                        <div class="form-group col">
                            <label class="fw-semibold" for="hoKhauTinh">Tỉnh/TP</label>
                            <select class="form-control" id="hoKhauTinh" required>
                            </select>
                        </div>
                        <div class="form-group col">
                            <label class="fw-semibold" for="hoKhauQuan">Quận/Huyện</label>
                            <select class="form-control" id="hoKhauQuan" required>
                                <option>-- Chọn Quận/Huyện --</option>
                            </select>
                        </div>
                        <div class="form-group col">
                            <label class="fw-semibold" for="hoKhauXa">Xã/Phường</label>
                            <select class="form-control" id="hoKhauXa" name="hoKhauXa" required>
                                <option>-- Chọn Xã/Phường --</option>
                            </select>
                        </div>
                        <script type="module" src="~/js/site.js"></script>


                        <div class="col">
                            <div class="form-group">
                                <label class="fw-semibold" for="address">Địa chỉ</label>
                                <input type="text" class="form-control form-control-sm" id="address" value=" @if (hoaDon != null)
                                {@hoaDon.KhachHang.DiaChi}
">
                            </div>
                        </div>

                    </div>
                    <div class="row">

                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="fw-semibold" for="medicalCode">Mã nhân viên</label>
                                <input type="text" name="MaNV" class="form-control form-control-sm" id="medicalCode" value=" @if (hoaDon != null)
                                {@hoaDon.NhanVien.IDNV}
">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="fw-semibold" for="invoiceNumber">Mã hóa đơn</label>
                                <input type="text" name="MaHD" class="form-control form-control-sm" id="medicalCode" value=" @if (hoaDon != null)
                                {@hoaDon.HoaDonChiTiets}
">

                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="fw-semibold" for="medicalCode">Mã vaccine</label>

                                <select class="form-control form-control-sm" id="medicalCode">
                                    @if (vatTu != null)
                                    {
                                        @foreach(var item in vatTu)
                                        {
                                             <option value="">@item.IDVT</option>
                                        }
                                    }
                                    
                                 
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="fw-semibold" for="medicalCode">Nội dung</label>
                                <select class="form-control form-control-sm" name="NoiDung" id="medicalCode">
                                    @if (vatTu != null)
                                    {
                                            @foreach (var item in vatTu)
                                            {
                                            <option value="@item.TenVatTu">@item.TenVatTu</option>
                                            }
                                    }
                                </select>
                            </div>
                        </div>

                    </div>


                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="fw-semibold" for="medicalCode">Số lượng</label>
                                <input type="number" min="1" class="form-control form-control-sm" id="medicalCode" value=" @if (hoaDon != null)
                                {@hoaDon.HoaDonChiTiets}
">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="fw-semibold" for="medicalCode">Đơn giá</label>
                                <input type="text" class="form-control form-control-sm" id="medicalCode" value=" @if (hoaDon != null)
                                {@hoaDon.HoaDonChiTiets}
">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="fw-semibold" for="medicalCode">Thành Tiền</label>
                                <input type="text" class="form-control form-control-sm" id="medicalCode" value=" @if (hoaDon != null)
                                {@hoaDon.HoaDonChiTiets}
">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <label class="fw-semibold" for="paymentMethod">Hình thức thanh toán</label>
                            <select id="paymentMethod" name="GhiChu" class="form-control form-control-sm">
                                @if (hoaDon != null)
                                {
                                <option>@hoaDon.GhiChu</option>
                               
                                }
                                else
                                {
                                    
                                    <option>Tiền mặt</option>
                                    <option>Chuyển khoản</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="fw-semibold" for="paymentMethod">Trạng thái</label>
                                <select id="paymentMethod" name="TrangThai" class="form-control form-control-sm">
                                    @if (hoaDon != null)
                                    {
                                        <option >@hoaDon.TrangThai</option>
                                       
                                    }
                                    else
                                    {
                                        <option value="True" selected>Đã thanh toán</option>
                                        <option value="False">Chưa thanh toán</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="fw-semibold" for="medicalCode">Thời gian</label>
                            <input type="datetime-local" name="ThoiGian" class="form-control col-3 me-1">
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="fw-semibold" for="taxCode">Mã số thuế</label>
                                <input type="text" class="form-control form-control-sm gray-bg" id="taxCode" >
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="fw-semibold" for="atmCode">Mã ATM</label>
                                <input type="text" class="form-control form-control-sm gray-bg" id="atmCode" >
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="fw-semibold" for="companyName">Tên đơn vị</label>
                                <input type="text" class="form-control form-control-sm gray-bg" id="companyName" >
                            </div>
                        </div>
                    </div>
                    <div class="row p-2 ps-4">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="radio-group row">
                                    <div class="form-check col-2 pt-2">
                                        <input type="radio" class="form-check-input" id="phieuThu" name="action">
                                        <label class="form-check-label" for="phieuThu">Phiếu thu</label>
                                    </div>
                                    <div class="form-check col-2 pt-2">
                                        <input type="radio" class="form-check-input" id="huyHoaDon" name="action">
                                        <label class="form-check-label" for="huyHoaDon">Hủy hóa đơn</label>
                                    </div>
                                    <div class="col">
                                        <button class="btn">Lựa chọn hoàn trả</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Trạng thái HĐ -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <p>Trạng thái HDDT Đã có hóa đơn điện tử - Số HĐ: <strong>HDDT/3007894</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
                <button id="targetButton" type="submit" style="display:none;">Nút bị kích hoạt</button>
                <script>
                    // Lấy phần tử button
                    const activateButton = document.getElementById('activateButton');
                    const targetButton = document.getElementById('targetButton');

                    // Thêm sự kiện click vào nút kích hoạt
                    activateButton.addEventListener('click', function () {
                        // Khi nút đầu tiên được nhấn, kích hoạt nút thứ hai
                        targetButton.click();
                    });

                    // Thêm sự kiện click vào nút bị kích hoạt
                    targetButton.addEventListener('click', function () {

                    });
                </script>
            </form>
        </div>
    </div>


    <!-- Bảng chi tiết hóa đơn -->
    <div class="border rounded-4 ">
        <select class="form-select form-select-sm  m-2 " style="width: 10%;" aria-label="Small select example">
            <option selected>Loại</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>

        <div class="table-responsive p-2 ">
            <table class="table table-bordered table-sm">
                <thead>
                    <tr>
                        <th>Mã hóa đơn chi tiết</th>
                        <th>Mã hóa đơn</th>
                        <th>Mã vaccine</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                        <th>Ghi chú</th>

                    </tr>
                </thead>
                <tbody>

                    @if (hoaDon!=null)
                    {
                        @foreach (var item in hoaDon.HoaDonChiTiets)
                        {
                            <tr>
                                <td>@item.IDHDCT</td>
                                <td>@hoaDon.IDHD</td>
                                <td>@item.IDVT</td>
                                <td>@item.SoLuong</td>
                                <td>@item.DonGia</td>
                                <td>@item.ThanhTien</td>
                                <td>@item.GhiChu</td>

                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td></td>

                        </tr>
                    }



                </tbody>
                <tfoot>
                    <tr>
                    </tr>
                </tfoot>
            </table>
            <button type="button" class="float-end btn w-25 custom-btn ">Xác Nhận</button>
        </div>
    </div>

</div>