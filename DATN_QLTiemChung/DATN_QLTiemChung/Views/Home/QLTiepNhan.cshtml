                <div class="row ">
                    <form id="customerForm" asp-action="AddKhachHang" asp-controller="QLTiepNhan">
                        <div class="row">
                            <div class="form-group col">
                                <label class="fw-semibold" for="maYTe">Mã y tế</label>
