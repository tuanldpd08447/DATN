                                <div class="modal-footer">
                                <button type="button" class="btn btn-outline-danger border-2" data-bs-dismiss="modal">Thoát</button>
                                    <button type="button" class="btn custom-btn">Thêm hàng chờ</button>
                                </div>
                            </div>
                        </div>
