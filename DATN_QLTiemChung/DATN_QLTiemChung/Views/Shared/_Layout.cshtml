@{
    var login = TempData["ID"];
    string role = TempData["Role"] as string;
    string home = TempData["Home"] as string;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DATN_CDCWebClient</title>
    <!-- Thêm PDF.js từ CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.10.377/pdf.min.js"></script>

    <!-- FontAwesome -->
    <script src="https://kit.fontawesome.com/e9c77e8100.js" crossorigin="anonymous"></script>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Custom CSS -->
    <style>
        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1030; /* Đảm bảo nằm trên các thành phần khác */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Tạo hiệu ứng bóng nhẹ */
        }

        body {
            padding-top: 60px; /* Tạo khoảng cách giữa nội dung và navbar */
        }

        .custom-hover {
            color: #2fb388;
            text-decoration: none;
            transition: color 0.3s, background-color 0.3s;
        }

            .custom-hover:hover {
                color: #ffffff;
                background-color: #2fb388;
                text-decoration: underline;
                padding: 5px;
                border-radius: 5px;
            }

        .custom-btn {
            color: #2fb388;
            border: #2fb388 2px solid;
        }

            .custom-btn:hover {
                color: #ffffff;
                background-color: #2fb388;
            }

            .custom-btn:focus {
                color: #ffffff;
                background-color: #2fb388;
            }

        .table th {
            background-color: #e8f5e9; 
            color: #000; 
            text-align: center;
            white-space: nowrap; 
        }

        .table tbody tr td {
            text-align: center;
            white-space: nowrap; 
        }

    </style>
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light text-white" style="background-color: #2fb388; min-height: 0px;">
        <div class="container px-2">
            <div class="row align-items-center">
                <!-- Button Offcanvas -->
               
                <div class="col-auto " onclick="window.location.href='@Url.Action("HomeQL", "Home")'">
                    <img src="~/Img/IMG_0624.png" alt="Logo CDC" class="img-fluid" style="max-width: 100px;">
                </div>
                <!-- Title -->
              
                @if (TempData["Role"] != null && home != "ql")
                {

                    if (role == "Bác Sĩ")
                    {
                        <div class="col-auto">
                            <a asp-controller="KhamSanLoc" asp-action="KhamSanLoc" class="text-light link-opacity-75-hover link-underline link-underline-opacity-0 py-2 fw-bold mx-2">KHÁM SÀNG LỌC</a>
                        </div>
                        <div class="col-auto">
                            <a asp-controller="QLTiemChung" asp-action="QLTiemChung" class="text-light link-opacity-75-hover link-underline link-underline-opacity-0 py-2 fw-bold mx-2">QUẢN LÝ TIÊM CHỦNG</a>
                        </div>
                    }
                    else if (role == "Y Tá")
                    {
                        <div class="col-auto">
                            <a asp-controller="QLTiemChung" asp-action="QLTiemChung" class="text-light link-opacity-75-hover link-underline link-underline-opacity-0 py-2 fw-bold mx-2">QUẢN LÝ TIÊM CHỦNG</a>
                        </div>
                        <div class="col-auto">
                            <a asp-controller="QLKhoVaccine" asp-action="QLKhoVaccine" class="text-light link-opacity-75-hover link-underline link-underline-opacity-0 py-2 fw-bold mx-2">KHO VACCINE</a>
                        </div>
                    }
                    else if (role == "Kế Toán")
                    {
                        <div class="col-auto">
                            <a asp-controller="QLHoaDon" asp-action="QLHoaDon" class="text-light link-opacity-75-hover link-underline link-underline-opacity-0 py-2 fw-bold mx-2">QUẢN LÝ HÓA ĐƠN</a>
                        </div>
                        <div class="col-auto">
                            <a asp-controller="QLXuatNhapKho" asp-action="QLXuatNhapKho" class="text-light link-opacity-75-hover link-underline link-underline-opacity-0 py-2 fw-bold mx-2">QUẢN LÝ XUẤT NHẬP KHO</a>
                        </div>
                        <div class="col-auto">
                            <a asp-controller="QLHoanTra" asp-action="QLHoanTra" class="text-light link-opacity-75-hover link-underline link-underline-opacity-0 py-2 fw-bold mx-2">QUẢN LÝ HOÀN TRẢ</a>
                        </div>
                    }
                    else if (role == "Thủ Kho")
                    {
                        <div class="col-auto">
                            <a asp-controller="QLKhoVaccine" asp-action="QLKhoVaccine" class="text-light link-opacity-75-hover link-underline link-underline-opacity-0 py-2 fw-bold mx-2">QUẢN LÝ KHO VACCINE</a>
                        </div>
                    }
                    else if (role == "Lễ Tân")
                    {
                        <div class="col-auto">
                            <a asp-controller="QLTiepNhan" asp-action="QLTiepNhan" class="text-light link-opacity-75-hover link-underline link-underline-opacity-0 py-2 fw-bold mx-2">QUẢN LÝ TIẾP NHẬN</a>
                        </div>
                    }
                    else if (role == "Nhân Sự")
                    {
                        <div class="col-auto">
                            <a asp-controller="QLNhanVien" asp-action="QLNhanVien" class="text-light link-opacity-75-hover link-underline link-underline-opacity-0 py-2 fw-bold mx-2">QUẢN LÝ NHÂN VIÊN</a>
                        </div>
                        <div class="col-auto">
                            <a asp-controller="QLKhachHang" asp-action="QLKhachHang" class="text-light link-opacity-75-hover link-underline link-underline-opacity-0 py-2 fw-bold mx-2">QUẢN LÝ KHÁCH HÀNG</a>
                        </div>
                        <div class="col-auto">
                            <a asp-controller="QLTaiKhoan" asp-action="QLTaiKhoan" class="text-light link-opacity-75-hover link-underline link-underline-opacity-0 py-2 fw-bold mx-2">QUẢN LÝ TÀI KHOẢN</a>
                        </div>
                    }
                }
            </div>
            <div class="btn-group">
                @if (login != null)
                {
                    <button type="button" class="btn fs-6 border-0 dropdown-toggle text-white" data-bs-toggle="dropdown" aria-expanded="false">
                        @TempData["Username"]
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" asp-action="ThongTinCaNhan" asp-controller="ThongTinCaNhan" asp-route-IDNV="@login">Thông tin cá nhân</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-action="Logout" asp-controller="DNhapDKy" >Đăng xuất</a></li>
                    </ul>
                }
                else
                {
                    <a type="button" asp-action="Login" asp-controller="DNhapDKy" class="btn btn-outline-light fw-bold">Đăng nhập</a>
                }
            </div>
        </div>
    </nav>

 
    <!-- Render Body -->
    <div>
        @RenderBody()
    </div>

    @if (TempData["Notification"] != null)
    {
        var notificationType = TempData["NotificationType"] ?? "info"; // Loại thông báo
        var notificationIcon = notificationType switch
        {
            "success" => "bi bi-check-circle ",
            "error" => "bi bi-exclamation-triangle-fill text-danger",
            "warning" => "bi bi-exclamation-triangle-fill text-warning",
            _ => "bi bi-info-circle-fill text-info"
        };
        var notificationStyle = notificationType switch
        {
            "success" => "color: #45ce76;",
            "error" => "color: #ef4444;",
            "warning" => "color: #0066FF;",
            _ => "color: #0066FF;"
        };

        <div class="position-fixed end-0 p-3" style="z-index: 11; top:7%;">
            <div id="autoHideToast" class="toast align-items-center text-bg-info border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="5000">
                <div class="d-flex flex-column bg-white border rounded p-3 mb-3 shadow-sm">
                    <!-- Icon và nội dung -->
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <!-- Icon và nội dung -->
                        <div class="d-flex align-items-center">
                            <i class="@notificationIcon fs-2 me-3" style="@notificationStyle"></i>
                            <div>
                                <div class="fw-bold">@TempData["NotificationTitle"]</div>
                                <div class="text-muted">@TempData["Notification"]</div>
                            </div>
                        </div>
                        <!-- Nút đóng -->
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>

                    <!-- Nút hành động -->
                   
                </div>
            </div>
        </div>


        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const toastElement = document.getElementById('autoHideToast');
                const toast = new bootstrap.Toast(toastElement);
                toast.show();
            });
        </script>
    }


    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- Custom JS -->
    <script type="module" src="~/js/site.js" asp-append-version="true"></script>
    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
