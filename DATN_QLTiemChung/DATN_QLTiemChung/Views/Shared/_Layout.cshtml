@{
    var login = false;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DATN_CDCWebClient</title>

    <!-- FontAwesome -->
    <script src="https://kit.fontawesome.com/e9c77e8100.js" crossorigin="anonymous"></script>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/DATN_CDCWebClient.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light text-white" style="background-color: #2fb388;min-height: 0px;">
        <div class="container px-2">
            <div class="row align-items-center">
                <!-- Button Offcanvas -->
                <div class="col-auto">
                    <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling">
                        <i class="fa-solid fa-bars"></i>
                    </button>
                </div>

                <!-- Title -->
                <div class="col-auto">
                    <a asp-controller="Home" asp-action="HomeQL" class="fs-3 text-light link-opacity-75-hover link-underline link-underline-opacity-0 py-2 fw-bold m-0">CDC</a>
                </div>

                <!-- Links -->
                <div class="col text-end">
                    <a class="text-light link-opacity-75-hover link-underline link-underline-opacity-0 py-2 fw-bold mx-2" asp-controller="QLTiepNhan" asp-action="QLTiepNhan">QUẢN LÝ TIẾP NHẬN </a>

                </div>
            </div>
            <div class="btn-group">
                @if (login)
                {
                    <button type="button" class="btn fs-6 border-0 dropdown-toggle text-white" data-bs-toggle="dropdown" aria-expanded="false">
                        Tunnd
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">Thông tin cá nhân</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Đăng xuất</a></li>
                    </ul>
                }
                else
                {
                    <a type="button" asp-action="Login" class="btn btn-outline-light fw-bold">Đăng nhập</a>
                }
            </div>
        </div>
    </nav>
    <!-- Sidebar Offcanvas -->
    <div class="offcanvas offcanvas-start" style="width: 20%;" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Danh Mục</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="row ">
                <a class="link-opacity-75-hover link-underline link-underline-opacity-0 py-2 custom-hover fw-bold" asp-controller="QLTiepNhan" asp-action="QLTiepNhan">QUẢN LÝ TIẾP NHẬN</a>
            </div>
            <div class="row">
                <a class="link-opacity-75-hover link-underline link-underline-opacity-0 py-2 custom-hover fw-bold" asp-controller="Home" asp-action="KhamSanLoc">KHÁM SÀNG LỌC</a>
            </div>
            <div class="row">
                <a class="link-opacity-75-hover link-underline link-underline-opacity-0 py-2 custom-hover fw-bold" asp-controller="QLHoaDon" asp-action="QLHoaDon">QUẢN LÝ HÓA ĐƠN</a>
            </div>
            <div class="row">
                <a class="link-opacity-75-hover link-underline link-underline-opacity-0 py-2 custom-hover fw-bold" asp-controller="Home" asp-action="QLTiemChung">QUẢN LÝ TIÊM CHỦNG</a>
            </div>
            <div class="row">
                <a class="link-opacity-75-hover link-underline link-underline-opacity-0 py-2 custom-hover fw-bold" asp-controller="Home" asp-action="QLKhachHang">QUẢN LÝ KHÁCH HÀNG</a>
            </div>
            <div class="row">
                <a class="link-opacity-75-hover link-underline link-underline-opacity-0 py-2 custom-hover fw-bold" asp-controller="Home" asp-action="QLNhanVien">QUẢN LÝ NHÂN VIÊN</a>
            </div>
            <div class="row">
                <a class="link-opacity-75-hover link-underline link-underline-opacity-0 py-2 custom-hover fw-bold" asp-controller="Home" asp-action="QLKho">KHO VACCINE</a>
            </div>
            <div class="row">
                <a class="link-opacity-75-hover link-underline link-underline-opacity-0 py-2 custom-hover fw-bold" asp-controller="Home" asp-action="QLXuatNhapKho">QUẢN LÝ XUẤT NHẬP KHO</a>
            </div>
            <div class="row">
                <a class="link-opacity-75-hover link-underline link-underline-opacity-0 py-2 custom-hover fw-bold text-uppercase" asp-controller="Home" asp-action="TNTiemChungTheoHopDong">TN tiêm chủng theo hợp đồng</a>
            </div>
            <div class="row">
                <a class="link-opacity-75-hover link-underline link-underline-opacity-0 py-2 custom-hover fw-bold text-uppercase" asp-controller="Home" asp-action="XuatDuoc">Xuất dược</a>
            </div>
             <div class="row">
                <a class="link-opacity-75-hover link-underline link-underline-opacity-0 py-2 custom-hover fw-bold text-uppercase" asp-controller="Home"  asp-action="NhapDuoc">nhập dược</a>

            </div>
            <div class="row">
                <a class="link-opacity-75-hover link-underline link-underline-opacity-0 py-2 custom-hover fw-bold text-uppercase" asp-controller="Home" asp-action="QLTaiKhoan">Quản Lý Tài Khoản</a>
            </div>
            <div class="row">
                <a class="link-opacity-75-hover link-underline link-underline-opacity-0 py-2 custom-hover fw-bold text-uppercase" asp-controller="Home" asp-action="QLHoanTra">Quản Lý Hoàn trả</a>
            </div>
        </div>
        <style>
            .custom-hover {
                color: #2fb388;
                text-decoration: none;
                transition: color 0.3s, background-color 0.3s;
            }

                .custom-hover:hover {
                    color: #ffffff;
                    background-color: #2fb388;
                    text-decoration: underline;
                    padding: 5px;
                    border-radius: 5px;
                }

            .custom-btn {
                color: #2fb388;
                border: #2fb388 2px solid;
            }

                .custom-btn:hover {
                    color: #ffffff;
                    background-color: #2fb388;
                }

                .custom-btn:focus {
                    color: #ffffff;
                    background-color: #2fb388;
                }

            .table th {
                background-color: #e8f5e9; /* Màu nền xanh nhạt cho tiêu đề */
                color: #000; /* Màu chữ đen */
                text-align: center;
                white-space: nowrap; /* Ngăn chữ bị xuống hàng */
            }

            .table tbody tr td {
                text-align: center;
                white-space: nowrap; /* Ngăn chữ bị xuống hàng trong ô dữ liệu */
            }
        </style>
    </div>

    <!-- Render Body -->
    <div>
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
