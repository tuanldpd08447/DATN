@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://kit.fontawesome.com/e9c77e8100.js" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="bg-light d-flex justify-content-center align-items-center" style="height: 100vh;">


        <div class="card p-4 shadow-lg" style="width: 100%; max-width: 50%; border-radius: 15px;">
            <div class="row">
                <div class="col-6 pt-5 mt-5">
                    <img src="~/Img/CDC Đà Nẵng copy.png" class="pt-5" alt="" width="100%">
                </div>
                <div class="col">
                    <div class="text-center mb-4">
                        <img src="~/Img/Logo.png " alt="Avatar" class="rounded-circle" style="width: 80px; height: 80px;">
                        <h4 class="mt-2 fw-bold">ĐĂNG KÝ</h4>
                    </div>

                    <form>
                        <div class="form-group mt-2">
                            <div class="input-group">
                                <div class="input-group-prepend ">
                                    <span class="input-group border rounded-start-2" style="padding: 20px;">
                                        <i class="fa-solid fa-user"></i>
                                    </span>
                                </div>
                                <div class="form-Doubleing">
                                    <input type="text" class="form-control border-start-0 " id="DoubleingInputName" placeholder="Nguyen Van A" style="height: 75%;">
                                    <label for="DoubleingInputName">Họ và Tên</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-2">
                            <div class="input-group">
                                <div class="input-group-prepend ">
                                    <span class="input-group border rounded-start-2" style="padding: 20px;">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                </div>
                                <div class="form-Doubleing">
                                    <input type="email" class="form-control border-start-0 " id="DoubleingInputEmail" placeholder="name@example.com" style="height: 75%;">
                                    <label for="DoubleingInputEmail">Email</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-2">
                            <div class="input-group">
                                <div class="input-group-prepend ">
                                    <span class="input-group border rounded-start-2" style="padding: 20px;">
                                        <i class="fa-solid fa-phone"></i>
                                    </span>
                                </div>
                                <div class="form-Doubleing">
                                    <input type="tel" class="form-control border-start-0 " id="DoubleingPhoneNumber" placeholder="0123456789" style="height: 75%;">
                                    <label for="DoubleingPhoneNumber">Số điện thoại</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group border rounded-start-2" style="padding: 20px;">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                </div>
                                <div class="form-Doubleing">
                                    <input type="password" class="form-control border-start-0" id="DoubleingPassword" placeholder="Password">
                                    <label for="DoubleingPassword">Mật khẩu</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group border rounded-start-2" style="padding: 20px;">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                </div>
                                <div class="form-Doubleing">
                                    <input type="password" class="form-control border-start-0" id="DoubleingEnterPassword" placeholder="Password">
                                    <label for="DoubleingEnterPassword">Nhập lại mật khẩu</label>
                                </div>
                            </div>
                        </div>


                        <button type="submit" class="btn  btn-block mt-4 fw-bold" style="width: 100%;background-color: #0099CF; color: white;">Đăng nhập</button>

                        <div class="text-center my-3">
                            <div class="container text-center">
                                <div class="row">
                                    <div class="col">
                                        <hr>
                                    </div>
                                    <div class="col-2">
                                        <span>or</span>
                                    </div>
                                    <div class="col">
                                        <hr>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="#" class="btn btn-outline-danger w-100 me-2"><i class="fab fa-google"></i> Google</a>
                            <a href="#" class="btn btn-outline-primary w-100 ms-2"><i class="fab fa-facebook-f"></i> Facebook</a>
                        </div>

                        <div class="text-center mt-3">
                            <p>Bạn đã có tài khoản? <a asp-action="Login">Đăng nhập</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
