<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DATN_CDCWebClient</title>

    <!-- FontAwesome -->
    <script src="https://kit.fontawesome.com/e9c77e8100.js" crossorigin="anonymous"></script>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/DATN_CDCWebClient.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light text-white" style="background-color: #2fb388;">
        <div class="container">
            <div class="row">
                <button class="btn col text-white" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling">
                    <i class="fa-solid fa-bars"></i>
                </button>
                <h3 class="m-0 col">CDC</h3>
            </div>
            <div class="btn-group">
                <button type="button" class="btn fs-6 border-0 dropdown-toggle text-white" data-bs-toggle="dropdown" aria-expanded="false">
                    Tunnd
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#">Thông tin cá nhân</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">Đăng xuất</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sidebar Offcanvas -->
    <div class="offcanvas offcanvas-start" style="width: 20%;" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Danh Mục</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="row"><a class="custom-hover" href="QLTiepNhan.html">QUẢN LÝ TIẾP NHẬN</a></div>
            <div class="row"><a class="custom-hover" href="KhamSanLoc.html">KHÁM SÀNG LỌC</a></div>
            <div class="row"><a class="custom-hover" href="QLHoaDon.html">QUẢN LÝ HÓA ĐƠN</a></div>
            <div class="row"><a class="custom-hover" href="QLTiemChung.html">QUẢN LÝ TIÊM CHỦNG</a></div>
            <div class="row"><a class="custom-hover" href="QLKhachHang.html">QUẢN LÝ KHÁCH HÀNG</a></div>
            <div class="row"><a class="custom-hover" href="QLNhanVien.html">QUẢN LÝ NHÂN VIÊN</a></div>
            <div class="row"><a class="custom-hover" href="QLKho.html">KHO VACCINE</a></div>
            <div class="row"><a class="custom-hover" href="QLXuatNhapKho.html">QUẢN LÝ XUẤT NHẬP KHO</a></div>
        </div>
    </div>

    <!-- Render Body -->
    @RenderBody()

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
